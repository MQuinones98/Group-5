  <script>
    angular.module('changeExample', [])
      .controller('ExampleController', ['$scope', function($scope) {
        $scope.counter = "default";
        $scope.change = function() {
          $scope.counter = "font1"
        };
      }]);

  </script>
  <div class="btn-group btn-group-justified">
  <a ng-click="showFonts = !showFonts" class="btn btn-default">Fonts</a>
  <a ng-click="showFontSizesAndColors = !showFontSizesAndColors" class="btn btn-default">Sizes & Colors</a>
  <a ng-click="showBackgrounds = !showBackgrounds" class="btn btn-default">Backgrounds</a>
</div>

