<div class="showColors">
    <h4 style="margin-top:23px; padding-bottom:10px;"><strong>Color: </strong> <input class="jscolor {onFineChange:'update(this)'}" value="7E7E7E"></h4>

    <script>
    function update(jscolor) {
        // 'jscolor' instance can be used as a string
        document.getElementById('text').style.color = '#' + jscolor
    }
    </script>
  </div>
</div>

